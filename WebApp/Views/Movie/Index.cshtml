@model IEnumerable<WebApp.Models.Movies.Movie>

@{
ViewData["Title"] = "Lista film√≥w";
}

<h1>Movies</h1>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Title</th>
        <th>Budget</th>
        <th>Homepage</th>
        <th>Release Date</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
    <tr>
        <td>
            <a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.MovieId">@movie.Title</a>
        </td>
        <td>
            @(movie.Budget == 0 || !movie.Budget.HasValue ? "brak" : movie.Budget.Value.ToString("C", new System.Globalization.CultureInfo("en-US")))
        </td>
        <td>
            @if (string.IsNullOrWhiteSpace(movie.Homepage))
            {
            <span>brak</span>
            }
            else
            {
            <a href="@movie.Homepage" target="_blank">@movie.Homepage</a>
            }
        </td>
        <td>
            @(movie.ReleaseDate.HasValue ? movie.ReleaseDate.Value.ToString("yyyy-MM-dd") : "brak")
        </td>
    </tr>
    }
    </tbody>
</table>
